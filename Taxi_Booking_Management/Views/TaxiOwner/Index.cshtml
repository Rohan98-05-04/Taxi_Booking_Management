@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@model IPagedList<TaxiOwner>

@{
    ViewData["Title"] = "All Owner Details";
}


<h2 class="d-inline">All Owner Details </h2>


 <div class="d-flex mt-3 justify-content-between">
    @using (Html.BeginForm("Index", "TaxiOwner", FormMethod.Get, new { @class = "d-flex" }))
    {
        <div class="form-group me-2">
            <input type="text" name="Search" class="form-control" value="@ViewBag.Search" placeholder="Search by name">
        </div>
        <button type="submit" class="btn btn-outline-success">
            <i class="fas fa-search"></i>
        </button>
    }

    <a onclick="displayBusyIndicator()" href="@Url.Action("AddOwner", "TaxiOwner")" class="btn btn-primary ms-2">Add New </a>
</div> 

<table class="table table-striped  mt-3">
    <thead>
        <tr class="table-primary">
            <th class="text-center">Owner Name</th>
            <th class="text-center">Mobile Number</th>
            <th class="text-center">Email</th>
            <th class="text-center">Address</th>
            <th class="text-center">Action</th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (var details in Model)
        {
            <tr>
                <td class="text-center">@details.TaxiOwnerName</td>
                <td class="text-center">@details.TaxiOwnerMobile</td>
                @if (!string.IsNullOrEmpty(details.TaxiOwnerEmail))
                {
                    <td class="text-center">@details.TaxiOwnerEmail</td>
                }
                else
                {
                    <td class="text-center">Not Available</td>
                }
                @if (!string.IsNullOrEmpty(details.TaxiOwnerAddress))
                {
                    <td class="text-center">@details.TaxiOwnerAddress</td>
                }
                else
                {
                    <td class="text-center">Not Available</td>
                }
                <td class="text-center"> <a href="@Url.Action("OwnerDetails", new { ownerId =details.TaxiOwnerId })" class="btn btn-info ms-2">Details </a></td>
                
               
               

            </tr>
        }
         @if (Model.TotalItemCount <= 0)
        {
            <tr>
                <td colspan="6" class="text-center">No Result Found</td>
            </tr>
        } 
    </tbody>

</table>
 @if (Model != null && Model.Count() > 0)
{
    <br />
    <div class="pull-right" style="float:right;margin-right:10px;">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
                new
                {
                    page,
                    Search = ViewBag.Search
                }),
                new PagedListRenderOptionsBase
    {
         LiElementClasses = new string[] { "page-item" },
         PageClasses = new string[] { "page-link" },
        Display = PagedListDisplayMode.Always

    })
    </div>
} 

