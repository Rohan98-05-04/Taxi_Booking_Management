@model TaxiOwner

@{
    ViewData["Title"] = "Update Taxi Owner Details";
}

<h2>Update Taxi Owner Details</h2>

<form asp-action="EditOwner" asp-controller="TaxiOwner" method="post" id="AddproductForm">
    <input asp-for="TaxiOwnerId" class="form-control" required type="hidden"/>
    <div class="form-group w-50 mt-5">
        <label asp-for="TaxiOwnerName" class="required">Full Name</label>
        <input asp-for="TaxiOwnerName" class="form-control" required />
        <span asp-validation-for="TaxiOwnerName" class="text-danger"></span>
    </div>

    <div class="form-group w-50 mt-3">
        <label asp-for="TaxiOwnerMobile" class="required">Mobile Number</label>
        <input asp-for="TaxiOwnerMobile" class="form-control" type="number" required min="10" />
        <span asp-validation-for="TaxiOwnerMobile" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="TaxiOwnerEmail"> Email</label>
        <input asp-for="TaxiOwnerEmail" class="form-control" type="email" />
        <span asp-validation-for="TaxiOwnerEmail" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="TaxiOwnerAddress"> Full Address</label>
        <textarea asp-for="TaxiOwnerAddress" class="form-control"></textarea>
        <span asp-validation-for="TaxiOwnerAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a asp-action="Index" asp-controller="TaxiOwner" class="btn btn-warning mt-2">Cancel</a>
</form>
