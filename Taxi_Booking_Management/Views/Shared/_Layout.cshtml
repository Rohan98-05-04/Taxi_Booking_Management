
    <!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - AapnaTaxi</title>
    @await Html.PartialAsync("_HeadResources")
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 mb-auto">
    @await Html.PartialAsync("_TopNavigation")
    <div class="container-fluid">
        <div class="row">
            <!-- Side Navigation Bar (fixed position) -->
           
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block  sidebar">
                @await Html.PartialAsync("_SideNavigation")
            </nav>

            <!-- Content Container -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-4">
                <!-- Your content goes here -->
                @RenderBody()
            </main>
        </div>
    </div>
   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AapnaStoreWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <footer class="mt-auto" style="background-color: #e3f2fd;">
        <div class="container py-4">
            <div class="row">
                <!-- Company Name -->
                <div class="col-md-4">
                    <h4 class="text-warning">Aapna Taxi</h4>
                    <p>Taxis play a crucial role in urban transportation, providing a convenient and reliable means of getting from one point to another. 
                        These iconic vehicles are a familiar sight in cities worldwide, offering a host of benefits for both locals and visitors.</p>
                </div>

                <!-- Important Links -->
                <div class="col-md-4">
                    <h4 class="text-warning">Important Links</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Terms and Conditions</a></li>
                        <li><a href="#">Policies</a></li>
                        <li><a href="#">About Company</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-4">
                    <h4 class="text-warning">Contact</h4>
                    <div class="social-icons">
                        <a href="#" class="icon me-2"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="icon me-2"><i class="fab fa-github fa-lg"></i></a>
                        <a href="#" class="icon me-2"><i class="fab fa-linkedin-in fa-lg"></i></a>
                    </div>
                    <div class="mt-3">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="write your query">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/handlefile.js"></script>


    <div id="loader" class="loader"></div>
    @await Html.PartialAsync("_LoadingPartial")

    @await Html.PartialAsync("_BodyScript")
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
