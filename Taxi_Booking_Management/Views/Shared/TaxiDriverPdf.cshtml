<html>
@model IEnumerable<TaxiDriver>

<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #000;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Driver Name</th>
                <th>Mobile Number</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DriverName</td>
                    <td>@item.DriverMobile</td>
                    <td>@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

