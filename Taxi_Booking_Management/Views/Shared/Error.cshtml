@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-danger">Oops! An error occurred.</h1>
            <p class="lead">We're sorry, but something went wrong while processing your request.</p>

            @if (Model.ShowRequestId)
            {
                <p class="mt-3">
                    If the problem persists, please contact support and provide the following error ID:
                    <code>@Model.RequestId</code>
                </p>
            }

            <p class="mt-3">
                In the meantime, you can try the following:
            </p>
            <ul>
                <li>Refresh the page and try again.</li>
                <li>Navigate back to the previous page.</li>
                <li>If the issue persists, please contact our support team.</li>
            </ul>
        </div>
    </div>
</div>
