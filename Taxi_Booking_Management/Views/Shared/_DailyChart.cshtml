<h2 class="mt-4 mb-4 text-warning fw-bolder">Daily Total Bill Amounts</h2>
<div class="d-flex flex-row">
    <div class="flex-grow-1">
        <canvas id="dailyChart" style="max-height: 300px;"></canvas>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    var dailyData = @Html.Raw(Json.Serialize(ViewBag.DailyData));
    var dailyChartCanvas = document.getElementById('dailyChart').getContext('2d');

    new Chart(dailyChartCanvas, {
        type: 'pie',
        data: {
            labels: Object.keys(dailyData),
            datasets: [{
                data: Object.values(dailyData),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
</script>
