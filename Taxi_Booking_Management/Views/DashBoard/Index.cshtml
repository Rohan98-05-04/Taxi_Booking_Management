﻿@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4 mb-3">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-car"></i> Total Taxi</h5>
                    <p class="card-text">@ViewBag.TotalTaxi</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-people-group"></i> Total Customers</h5>
                    <p class="card-text">@ViewBag.TotalCustomer</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-users"></i> Total Owners</h5>
                    <p class="card-text">@ViewBag.TotalOwner</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-book"></i> Total Bookings</h5>
                    <p class="card-text">@ViewBag.TotalBooking</p>
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-primary" id="openModalBtn">Account</button>

    <h2 class="mb-4 text-warning fw-bolder">Monthly Total Bill Amounts</h2>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Account</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="modalForm" asp-controller="Account" asp-action="YearlyTotalBookingAmounts">
                        <div class="form-row row">
                            <div class="col">
                                <label for="yearInput">Year:</label>
                                <input type="number" class="form-control" id="yearInput" name="year" />
                            </div>
                            <div class="col my-4">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                    <form id="dateBillForm">
                        <div class="form-row row">
                            <div class="form-group col">
                                <label for="fromDate">From Date:</label>
                                <input type="date" class="form-control" id="fromDate" name="fromDate">
                            </div>
                            <div class="form-group col">
                                <label for="toDate">To Date:</label>
                                <input type="date" class="form-control" id="toDate" name="toDate">
                            </div>
                            <div class="form-group col my-4">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    @await Html.PartialAsync("_MonthlyChart")
     @await Html.PartialAsync("_DailyChart")
    
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            showMonthlyChart();

            $(".close").click(function () {
                $("#myModal").modal("hide");
            });

            $('#openModalBtn').click(function () {
                $('#myModal').modal('show');
            });
        })
        
        function openModal() {
            $('#myModal').modal('show')
        }

        function closeDeleteModal() {
            $('#myModal').modal('hide')
        }
    </script>
}