@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4 mb-3">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-car"></i> Total Taxi</h5>
                    <p class="card-text">@ViewBag.TotalTaxi</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-people-group"></i> Total Customers</h5>
                    <p class="card-text">@ViewBag.TotalCustomer</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-users"></i> Total Owners</h5>
                    <p class="card-text">@ViewBag.TotalOwner</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-book"></i> Total Bookings</h5>
                    <p class="card-text">@ViewBag.TotalBooking</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-end">
            <div class="col-auto">
                <button type="button" class="btn btn-success" id="openModalBtn">Report</button>
            </div>
        </div>
    </div>

    <h2 class="mb-4 text-warning fw-bolder">Monthly Total Bill Amounts</h2>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Account</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="modalForm" >
                        <div class="form-row row">
                            <div class="col">
                                <label for="yearInput" class="required">Year:</label>
                                <input type="number" class="form-control" id="yearInput" name="year" required placeholder="Eg:-yyyy"/>
                            </div>
                            <div class="col my-4">
                                <a href="#" onclick="dwnldAnnualPdf()" class="btn btn-danger">PDF</a>
                            </div>
                        </div>
                    </form>
                    <form id="dateBillForm">
                        <div class="form-row row">
                            <div class="form-group col">
                                <label for="fromDate">From Date:</label>
                                <input type="date" class="form-control" id="fromDate" name="fromDate" required/>
                            </div>
                            <div class="form-group col">
                                <label for="toDate">To Date:</label>
                                <input type="date" class="form-control" id="toDate" name="toDate" required/>
                            </div>
                            <div class="form-group col my-4">

                                <a href="#" onclick="dwnldDatesPdf()" class="btn btn-danger">PDF</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex">
        <h5 class="chartType text-success fw-bold">Chart Type</h5>
        <label class="control-label text-success ps-3"> Bar  <input class="form-check-inline" value="bar" name="Chart" type="radio" onchange="showMonthlyChart()" /></label>

        <label class="control-label text-success"> Line <input class="form-check-inline" value="line" name="Chart" type="radio" checked onchange="showMonthlyChart()" /></label>
    </div>

    <div class="d-flex flex-row">
        <div class="flex-grow-1">
            <canvas id="monthlyChart" style="max-height: 300px;"></canvas>
        </div>
    </div>

    <h2 class="mt-4 mb-4 text-warning fw-bolder">Daily Total Bill Amounts</h2>
    <div class="d-flex flex-row">
        <div class="flex-grow-1">
            <canvas id="dailyChart" style="max-height: 300px;"></canvas>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(document).ready(function () {
            showMonthlyChart();

        })


        // Monthly Chart
        function showMonthlyChart() {
            var existingChart = window.myChart;
            console.log("existingChart", existingChart)
            if (existingChart) {
                existingChart.destroy();
            }
            var monthlyData = @Html.Raw(Json.Serialize(ViewBag.MonthlyData));
            var monthlyChartCanvas = document.getElementById('monthlyChart').getContext('2d');
            var chartTypeValue = $('input[name="Chart"]:checked').val()
            console.log("chartTypeValue", chartTypeValue)
            window.myChart = new Chart(monthlyChartCanvas, {
                type: chartTypeValue == 'bar' ? 'bar' : 'line',
                data: {
                    labels:  ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Monthly Total Bill Amount',
                        data: monthlyData,
                        backgroundColor: ['rgba(75, 192, 192, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(255, 205, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(201, 203, 207, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(255, 205, 86, 0.2)'],
                        borderColor: ['rgba(75, 192, 192, 1)',
                            'rgb(255, 99, 132)',
                            'rgb(255, 159, 64)',
                            'rgb(255, 205, 86)',
                            'rgb(75, 192, 192)',
                            'rgb(54, 162, 235)',
                            'rgb(153, 102, 255)',
                            'rgb(201, 203, 207)',
                            'rgba(75, 192, 192, 1)',
                            'rgb(255, 99, 132)',
                            'rgb(255, 159, 64)',
                            'rgb(255, 205, 86)'],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                color: 'red'
                            }
                        }
                    },
                    layout: {
                        padding: {
                            left: 10,
                            right: 10,
                            top: 10,
                            bottom: 10
                        }
                    },
                    elements: {
                        bar: {
                            borderColor: 'rgba(50, 168, 92)',
                            borderWidth: 1
                        }
                    }
                }
            });
        }



        // Daily Chart
        var dailyData = @Html.Raw(Json.Serialize(ViewBag.DailyData));
        var dailyChartCanvas = document.getElementById('dailyChart').getContext('2d');

        new Chart(dailyChartCanvas, {
            type: 'pie',
            data: {
                labels: Object.keys(dailyData),
                datasets: [{
                    data: Object.values(dailyData),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });

        $(document).ready(function () {
            // When the close button is clicked, hide the modal
            $(".close").click(function () {
                $("#myModal").modal("hide");
            });
        });

        function openModal() {
            $('#myModal').modal('show')
        }

        function closeModal() {
            $('#myModal').modal('hide')
        }
        $(document).ready(function () {
            $('#openModalBtn').click(function () {
                $('#myModal').modal('show');
            });
        });

        //For ANnual acount report
        // JavaScript to handle PDF link click event
        function dwnldAnnualPdf() {
            event.preventDefault(); // Prevent default link behavior
            var yearInput = document.getElementById('yearInput');
            var year = document.getElementById('yearInput').value; // Get year value
            var url = "@Url.Action("YearlyTotalBookingAmounts", "Account")?year=" + year + "&export=pdf";
            window.location.href = url; // Redirect to the PDF URL
            yearInput.value = " ";
            closeModal()
        }
        //For amount reports for Dates
        function dwnldDatesPdf() {
            event.preventDefault(); // Prevent default link behavior
            var fromDateInput = document.getElementById('fromDate'); // Get fromDate value
            var toDateInput = document.getElementById('toDate');
            var fromDate = document.getElementById('fromDate').value; // Get fromDate value
            var toDate = document.getElementById('toDate').value; // Get toDate value

            var url = "@Url.Action("GetDateBillAmounts", "Account")?fromDate=" + fromDate + "&toDate=" + toDate + "&export=pdf";
            window.location.href = url; // Redirect to the PDF URL
            fromDateInput.value = "";
            toDateInput .value= "";
            closeModal()
        }
    </script>
}