@model User

@{
    ViewData["Title"] = "Update User Details";
}

<h2>Update User Details</h2>

<form asp-action="UpdateUser" asp-controller="User" method="post" class="mb-4" id="AddproductForm">
    <input value="@Model.Id" asp-for="Id" hidden/>
    <div class="form-group w-50 mt-5">
        <label asp-for="Name" class="required">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="Email"> Email</label>
        <input asp-for="Email" class="form-control" type="email" disabled />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control"/>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control"/>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group  w-50 mt-3">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control"/>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a asp-action="GetUserDetails" asp-controller="User" class="btn btn-warning mt-2">Cancel</a>
</form>
